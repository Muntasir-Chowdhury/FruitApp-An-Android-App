<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SettingActivity">
    <ImageView
        android:id="@+id/crossbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="30dp"

        />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/crossbutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/settingtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:text="Settings"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="28dp"
                    android:text="FRACTUS"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/settingtext" />

                <ImageView
                    android:id="@+id/infoimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/ic_outline_info_24"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/settingtext" />

                <View
                    android:id="@+id/view1"
                    app:layout_constraintTop_toBottomOf="@id/textView2"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintEnd_toEndOf="@id/infoimg"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:id="@+id/settinglogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_logo"
                    app:layout_constraintStart_toStartOf="@id/textView2"
                    app:layout_constraintTop_toBottomOf="@id/view1" />

                <TextView
                    android:id="@+id/app_info"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Most fruit are naturally low in fat and calories.None have colestrol.Fruits are sources of many essential nutrients,potatium and many more."
                    app:layout_constraintStart_toEndOf="@+id/settinglogo"
                    app:layout_constraintTop_toTopOf="@id/settinglogo"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/view1"
                    app:layout_constraintBottom_toBottomOf="@id/settinglogo"
                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="28dp"
                    android:text="CUSTOMIZATION"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/settinglogo" />

                <ImageView
                    android:id="@+id/cusimg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="28dp"
                    android:src="@drawable/ic_customizationlogo"
                    app:layout_constraintStart_toStartOf="@id/infoimg"
                    app:layout_constraintTop_toBottomOf="@+id/settinglogo"
                    app:layout_constraintEnd_toEndOf="@+id/infoimg"
                    />

                <View
                    android:id="@+id/view2"
                    app:layout_constraintTop_toBottomOf="@id/textView3"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintEnd_toEndOf="@id/cusimg"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="If you wish you can restart the application by toggle the switch in the box.That way it starts the onboarding process and you will see the welcome screen again."
                    app:layout_constraintEnd_toEndOf="@id/view2"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@id/view2"
                    app:layout_constraintTop_toBottomOf="@id/view2" />
                <Switch
                    android:id="@+id/switchid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textView4"
                    app:layout_constraintEnd_toEndOf="@id/textView4"
                    android:layout_marginTop="50dp"
                    android:checked="false"
                    android:layout_marginRight="10dp"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textView4"
                    app:layout_constraintStart_toStartOf="@id/textView4"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="RESTARTED"
                    android:id="@+id/restarted"
                    />


                <TextView
                    android:id="@+id/applicationtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="70dp"
                    android:text="APPLICATION"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/restarted" />

                <ImageView
                    android:id="@+id/appimg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_phoneimg"
                    app:layout_constraintStart_toStartOf="@id/infoimg"
                    app:layout_constraintTop_toTopOf="@+id/applicationtv"
                    app:layout_constraintEnd_toEndOf="@+id/infoimg"
                    />

                <View
                    android:id="@+id/appview"
                    app:layout_constraintTop_toBottomOf="@id/applicationtv"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintEnd_toEndOf="@id/cusimg"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/developertxt"
                    android:text="Developer"
                    app:layout_constraintTop_toBottomOf="@id/appview"
                    app:layout_constraintStart_toStartOf="@id/appview"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/habibur1"
                    android:text="Muntasir Chowdhury"
                    app:layout_constraintTop_toBottomOf="@id/appview"
                    app:layout_constraintEnd_toEndOf="@id/infoimg"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <View
                    android:id="@+id/developerview"
                    app:layout_constraintTop_toBottomOf="@id/developertxt"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintEnd_toEndOf="@id/cusimg"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/designertxt"
                    android:text="Designer"
                    app:layout_constraintTop_toBottomOf="@id/developerview"
                    app:layout_constraintStart_toStartOf="@id/appview"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/habibur2"
                    android:text="Habibur Rahman"
                    app:layout_constraintTop_toTopOf="@id/designertxt"
                    app:layout_constraintEnd_toEndOf="@id/infoimg"
                    android:layout_marginTop="0dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <View
                    android:id="@+id/designerview"
                    app:layout_constraintTop_toBottomOf="@id/designertxt"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintEnd_toEndOf="@id/cusimg"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/compatibilitytxt"
                    android:text="Compatibility"
                    app:layout_constraintTop_toBottomOf="@id/designerview"
                    app:layout_constraintStart_toStartOf="@id/appview"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/habibur3"
                    android:text="iOS 14"
                    app:layout_constraintTop_toTopOf="@id/compatibilitytxt"
                    app:layout_constraintEnd_toEndOf="@id/infoimg"
                    android:layout_marginTop="0dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <View
                    android:id="@+id/compatibilityview"
                    app:layout_constraintTop_toBottomOf="@id/compatibilitytxt"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintEnd_toEndOf="@id/cusimg"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/instatxt"
                    android:text="Instagram"
                    app:layout_constraintTop_toBottomOf="@id/compatibilityview"
                    app:layout_constraintStart_toStartOf="@id/appview"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/habibur4"
                    android:text="Instagram"
                    app:layout_constraintTop_toTopOf="@id/instatxt"
                    app:layout_constraintEnd_toStartOf="@id/instaimg"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="0dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/instaimg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/instagrampicture"
                    app:layout_constraintStart_toStartOf="@id/infoimg"
                    app:layout_constraintTop_toTopOf="@+id/instatxt"
                    app:layout_constraintEnd_toEndOf="@+id/infoimg"
                    />

                <View
                    android:id="@+id/instaview"
                    app:layout_constraintTop_toBottomOf="@id/instatxt"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintEnd_toEndOf="@id/cusimg"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/suitxt"
                    android:text="SwiftUI"
                    app:layout_constraintTop_toBottomOf="@id/instaview"
                    app:layout_constraintStart_toStartOf="@id/appview"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/swift2txt"
                    android:text="iOS 14"
                    app:layout_constraintTop_toTopOf="@id/suitxt"
                    app:layout_constraintEnd_toEndOf="@id/infoimg"
                    android:layout_marginTop="0dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <View
                    android:id="@+id/suitview"
                    app:layout_constraintTop_toBottomOf="@id/suitxt"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintEnd_toEndOf="@id/cusimg"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    android:background="@android:color/darker_gray" />





            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>